<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs')  %> 
<body>
    <%- include('../partials/headerAdmin.ejs')  %>
    <script src="/javascript/imagePreview.js"></script>
    <script src="/javascript/autosValidator.js"></script>
    <main class="container">
        <h3 class="text-center">Agregar Auto</h3>
        <div class="container col-md-4">
            <form class="row g-3" action="/admin/autos/agregarAuto" method="POST" enctype="multipart/form-data">
                <div class="col-12">
                    <label for="marca" class="form-label">Marca</label>
                    <input type="text" class="form-control" id="marca" name="marca" value="<%= (locals.old  && old.marca) ? old.marca : "" %>">
                    <small class="text-danger" id="errorMarca"><%= (locals.errors  && errors.marca) ? errors.marca.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="modelo" class="form-label">Modelo</label>
                    <input type="text" class="form-control" id="modelo" name="modelo" value="<%= (locals.old  && old.modelo) ? old.modelo : "" %>">
                    <small class="text-danger" id="errorModelo"><%= (locals.errors  && errors.modelo) ? errors.modelo.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="anio" class="form-label">AÃ±o</label>
                    <input type="number" class="form-control" id="anio" name="anio" value="<%= (locals.old  && old.anio) ? old.anio : "" %>">
                    <small class="text-danger" id="errorAnio"><%= (locals.errors  && errors.anio) ? errors.anio.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="color" class="form-label">Color</label>
                    <input type="text" class="form-control" id="color" name="color" value="<%= (locals.old  && old.color) ? old.color : "" %>">
                    <small class="text-danger" id="errorColor"><%= (locals.errors  && errors.color) ? errors.color.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="sucursal" class="form-label">Sucursal</label>
                    <select name="sucursalId" id="sucursal" class="form-select" aria-label="Default select example">
                        <option value="" selected hidden>Seleccione una sucursal..</option>
                        <% getSucursales.forEach(({id, nombre}) => { %>
                            <option value="<%= id %>"><%= nombre %> </option>
                        <% }) %> 
                    </select>
                    <small class="text-danger" id="errorSucursal"><%= (locals.errors  && errors.sucursal) ? errors.sucursal.msg : "" %></small>
                </div>
                <div id="imagePreview"></div>
                <!-- Imagen-->
                <div class="col-12">
                    <label for="inputFile" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="inputFile" name="image" onchange="fileValidation()"/>
                </div>
                <small class="text-danger" id="errorImagen"><%= (locals.errors  && errors.image) ? errors.image.msg : "" %></small>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">AGREGAR</button>
                </div>
                <small class="text-danger" id="errorForm"></small>
            </form>
        </div>
    </main>
    <%- include('../partials/scripts.ejs')  %> 
</body>
</html>