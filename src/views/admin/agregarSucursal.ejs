<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs')  %> 
<body>
    <%- include('../partials/headerAdmin.ejs')  %> 
    <script src="/javascript/imagePreview.js"></script>
    <script src="/javascript/sucursalValidator.js"></script>
    <main class="container">
        <h3 class="text-center">Agregar sucursal</h3>
        <div class="container col-md-4">
            <form class="row g-3" action="/admin/sucursales/agregarSucursal" method="POST" enctype="multipart/form-data">
                <div class="col-12">
                    <label for="inputName" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="inputName" name="nombre" value="<%= (locals.old  && old.nombre) ? old.nombre : "" %>">
                    <small class="text-danger" id="errorNombre"><%= (locals.errors  && errors.nombre) ? errors.nombre.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="inputAddress" class="form-label">Dirección</label>
                    <input type="text" class="form-control" id="inputAddress" name="direccion" value="<%= (locals.old  && old.direccion) ? old.direccion : "" %>">
                    <small class="text-danger" id="errorDireccion"><%= (locals.errors  && errors.direccion) ? errors.direccion.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="inputTel" class="form-label">Teléfono</label>
                    <input type="tel" class="form-control" id="inputTel" name="telefono" value="<%= (locals.old  && old.telefono) ? old.telefono : "" %>">
                    <small class="text-danger" id="errorTelefono"><%= (locals.errors  && errors.telefono) ? errors.telefono.msg : "" %></small>
                </div>
                <!-- Imagen-->
                <div id="imagePreview"></div>
                
                <div class="col-12">
                    <label for="inputFile" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="inputFile" name="image" onchange="fileValidation()"/>
                </div>
                <small class="text-danger" id="errorImagen"><%= (locals.errors  && errors.image) ? errors.image.msg : "" %></small>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">AGREGAR</button>
                </div>
                <small class="text-danger" id="errorForm"></small>
            </form>
        </div>
    </main>
    <%- include('../partials/scripts.ejs')  %> 
</body>
</html>